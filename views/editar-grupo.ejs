<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina  %> </h1>
    <form method="POST" class="default-form">
        <% const {nombre, descripcion, categoriaId, url} = grupo %> 
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" value="<%= nombre %> " placeholder="Nombre Grupo">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" value="<%= descripcion %> " name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categotía</label>
            <select name="categoriaId">
                <option value="" selected disabled >-- Elige una categoria</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>" <%= (categoriaId === categoria.id) ? 'selected' : '' %> >
                        <%= categoria.nombre  %> 
                    </option>
                <% }) %>  
            </select>
        </div>
        <div class="campo">
            <label>Sitio Web</label>
            <input type="url" name="url" value="<%= url %> " placeholder="Sitio Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>